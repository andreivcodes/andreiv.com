---
import { Card, CardHeader, CardContent } from "../ui/card";
import { Badge } from "../ui/badge";
import { PERSONAL_INFO, SKILLS, CONTACT_INFO } from "@/lib/personalInfo";
---

<Card className="flex w-full flex-col gap-4 border-0 shadow-none md:border md:shadow-sm">
  <div class="flex flex-col gap-6 p-6 md:flex-row md:p-8">
    <div class="order-2 flex-1 md:order-1">
      <CardHeader className="p-0 pb-4">
        <div class="flex h-full flex-col justify-between">
          <div class="font-mono text-3xl font-bold">{PERSONAL_INFO.name}</div>

          <div>
            <div class="font-mono">{PERSONAL_INFO.title}</div>
            <div class="flex flex-row items-center gap-2 font-mono text-sm font-light">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-4 w-4"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path>
                <path d="M2 12h20"></path>
              </svg>
              {PERSONAL_INFO.location}
            </div>
          </div>
        </div>
      </CardHeader>
      <CardContent className="space-y-6 p-0 font-mono text-sm">
        <p>{PERSONAL_INFO.summary}</p>

        <div class="flex flex-row flex-wrap gap-2">
          {
            SKILLS.primary.map((skill) => (
              <Badge className="pointer-events-none rounded-full">{skill}</Badge>
            ))
          }
          {
            SKILLS.secondary.map((skill) => (
              <Badge className="pointer-events-none rounded-full" variant="secondary">
                {skill}
              </Badge>
            ))
          }
        </div>

        <div class="flex flex-row gap-4 pt-2">
          <a
            href={CONTACT_INFO.github}
            target="_blank"
            rel="noopener noreferrer"
            class="text-foreground hover:text-primary transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </a>
          <a
            href={CONTACT_INFO.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="text-foreground hover:text-primary transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
              <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
            </svg>
          </a>
          <a
            href={CONTACT_INFO.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="text-foreground hover:text-primary transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a
            href={`mailto:${CONTACT_INFO.email}`}
            class="text-foreground hover:text-primary transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-10 5L2 7"></path>
            </svg>
          </a>
        </div>
      </CardContent>
    </div>

    <div class="order-1 flex justify-center md:order-2 md:justify-start">
      <div class="h-40 w-40 flex-shrink-0 overflow-hidden rounded-full md:h-48 md:w-48">
        <img
          src={PERSONAL_INFO.profileImage}
          alt="Profile picture"
          class="h-full w-full object-cover"
        />
      </div>
    </div>
  </div>
</Card>
